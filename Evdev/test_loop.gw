#import Evdev
#import Std

#import Modules
#import Soundpipe

new Evdev(6) :=> var Evdev dev;

var SinOsc s ~> dac;
s ~> var Jcrev rev ~> dac;

while(true) {
  dev => now;
  var Evdev.Ev ev;
  while(dev.recv(ev)) {
    if(ev.type == 1 && ev.value == 1)
      ev.code /2. + 36 => Std.mtof => s.freq;
  }
}
